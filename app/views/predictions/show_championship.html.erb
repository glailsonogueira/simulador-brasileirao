<% content_for :title, "Previsoes" %>
<%= breadcrumb ["Inicio", root_path], ["Previsoes", predictions_path], @championship.full_name %>

<div style="text-align: center; margin-bottom: 30px;">
  <h1 style="color: #000080;">Previsoes</h1>
  <p style="font-size: 18px; color: #666; margin-top: 10px;">
    <strong><%= @championship.full_name %></strong>
  </p>
  <div style="margin-top: 15px;">
    <%= link_to "Voltar", predictions_path, class: "btn" %>
  </div>
</div>

<div class="card">
  <h2 style="text-align: center; margin-bottom: 20px;">Selecione uma Rodada</h2>
  
  <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px;">
    <% @rounds.each do |round| %>
      <%= link_to round_prediction_path(championship_id: @championship.id, round_id: round.id), style: "text-decoration: none;" do %>
        <div class="card" style="background: #f8f9fa; text-align: center; padding: 20px; transition: transform 0.2s;">
          <h3 style="color: #000080; margin-bottom: 15px; font-size: 20px;">
            Rodada <%= round.number %>
          </h3>
          
          <% status = round.status %>
          <% if status == :open %>
            <p style="color: #28a745; font-weight: bold; margin-bottom: 10px;">Aberta</p>
          <% elsif status == :locked %>
            <p style="color: #dc3545; font-weight: bold; margin-bottom: 10px;">Bloqueada</p>
          <% elsif status == :closed %>
            <p style="color: #999; font-weight: bold; margin-bottom: 10px;">Encerrada</p>
          <% elsif status == :finished %>
            <p style="color: #666; font-weight: bold; margin-bottom: 10px;">Finalizada</p>
          <% end %>
          
          <div style="font-size: 12px; color: #666; margin-top: 10px;">
            <%= round.matches.count %> partida(s)
          </div>
          
          <div style="margin-top: 15px; color: #000080; font-weight: bold;">
            Ver Rodada &#8594;
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
