<% content_for :title, "Redefinir senha" %>

<div class="card" style="max-width: 500px; margin: 50px auto;">
  <h1 style="margin-bottom: 20px;"> Redefinir senha</h1>
  
  <%= form_with url: password_reset_path(params[:token]), method: :patch, local: true do |f| %>
    <div style="margin-bottom: 15px;">
      <%= f.label :password, "Nova senha:" %><br>
      <%= f.password_field :password, name: "user[password]", required: true, minlength: 6, autofocus: true,
          style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
      <small style="color: #666;">MÃ­nimo 6 caracteres</small>
    </div>
    
    <div style="margin-bottom: 20px;">
      <%= f.label :password_confirmation, "Confirmar nova senha:" %><br>
      <%= f.password_field :password_confirmation, name: "user[password_confirmation]", required: true, minlength: 6,
          style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>
    
    <%= f.submit "Redefinir senha", class: "btn", style: "width: 100%;" %>
  <% end %>
</div>
