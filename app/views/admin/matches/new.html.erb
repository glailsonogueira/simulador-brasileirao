<h1>Nova Partida - Rodada <%= @round.number %></h1>

<%= link_to "â† Voltar", admin_round_matches_path(@round), class: "btn", style: "margin-bottom: 20px;" %>

<div class="card" style="max-width: 600px;">
  <%= form_with model: @match, url: admin_round_matches_path(@round), method: :post, local: true do |f| %>
    <div style="margin-bottom: 15px;">
      <%= f.label :home_club_id, "Mandante:" %><br>
      <%= f.collection_select :home_club_id, @round.championship.clubs.ordered, :id, :name, { prompt: "Selecione o mandante" }, { style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" } %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :away_club_id, "Visitante:" %><br>
      <%= f.collection_select :away_club_id, @round.championship.clubs.ordered, :id, :name, { prompt: "Selecione o visitante" }, { style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" } %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :scheduled_at, "Data e Hora:" %><br>
      <%= f.datetime_local_field :scheduled_at, style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>

    <%= f.submit "Criar Partida", class: "btn", style: "width: 100%;" %>
  <% end %>
</div>
