<% content_for :title, @championship.full_name %>
<%= breadcrumb [t("navigation.home"), root_path], ["Admin", admin_championships_path], [t("navigation.championships"), admin_championships_path], @championship.full_name %>

<!-- CABE√áALHO COM INFORMA√á√ïES DO CAMPEONATO -->
<div style="text-align: center; margin-bottom: 30px;">
  <h1 style="color: #000080;"><%= @championship.full_name %></h1>
  <p style="font-size: 18px; color: #666; margin-top: 10px;">
    <strong>Ano:</strong> <%= @championship.year %> | 
    <strong>Per√≠odo:</strong> <%= @championship.start_date&.strftime("%d/%m/%Y") %> a <%= @championship.end_date&.strftime("%d/%m/%Y") %>
    <% if @championship.favorite_club %>
      | <strong>Time Favorito:</strong> <%= @championship.favorite_club.name %> ‚≠ê
    <% end %>
  </p>
  
  <!-- Bot√µes de A√ß√£o -->
  <div style="margin-top: 20px; display: flex; gap: 10px; justify-content: center; flex-wrap: wrap;">
    <%= link_to t("actions.back"), admin_championships_path, class: "btn" %>
    <%= link_to edit_admin_championship_path(@championship), class: "btn", style: "background: #007bff;" do %>
  ‚úèÔ∏è <%= t('actions.edit') %>
    <% end %>
    
    <% unless @championship.active? %>
      <%= button_to t("actions.activate"), activate_admin_championship_path(@championship), method: :patch, class: "btn", style: "background: #28a745;" %>
    <% end %>
    
    <% unless @championship.complete? %>
      <%= button_to "üóëÔ∏è Excluir", admin_championship_path(@championship), method: :delete, data: { confirm: t("confirmations.are_you_sure") }, class: "btn", style: "background: #dc3545;" %>
    <% end %>
  </div>
</div>

<!-- DASHBOARD COM 2 CARDS GRANDES -->
<div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 30px; margin-top: 40px; max-width: 700px; margin-left: auto; margin-right: auto;">
  
  <!-- CARD 1: CLUBES PARTICIPANTES -->
  <%= link_to admin_championship_clubs_path(@championship), style: "text-decoration: none;" do %>
    <div class="card" style="padding: 30px; text-align: center; transition: transform 0.2s, box-shadow 0.2s; cursor: pointer; min-height: 250px; display: flex; flex-direction: column; justify-content: center;">
    <div style="font-size: 60px; margin-bottom: 15px;">üèÜ</div>
    <h2 style="color: #000080; margin-bottom: 10px; font-size: 22px;">Clubes Participantes</h2>
      <p style="color: #666; font-size: 18px; margin-bottom: 10px;">
        <strong style="font-size: 24px; color: #000080;"><%= @championship.clubs.count %>/20</strong> clubes cadastrados
      </p>
      <p style="color: #999; font-size: 14px;">Clique para gerenciar clubes</p>
    </div>
  <% end %>
  
  <!-- CARD 2: JOGOS E RESULTADOS -->
  <%= link_to admin_championship_matches_path(@championship), style: "text-decoration: none;" do %>
    <div class="card" style="padding: 30px; text-align: center; transition: transform 0.2s, box-shadow 0.2s; cursor: pointer; min-height: 180px; display: flex; flex-direction: column; justify-content: center;">
      <div style="font-size: 60px; margin-bottom: 15px;">‚öΩ</div>
      <h2 style="color: #000080; margin-bottom: 10px; font-size: 22px;">Jogos e Resultados</h2>
      <p style="color: #666; font-size: 18px; margin-bottom: 10px;">
        <strong style="font-size: 24px; color: #000080;"><%= @championship.rounds.count %></strong> rodadas | <font style="color: #666; font-size: 16px";><%= Match.joins(:round).where(rounds: { championship_id: @championship.id }).count %> jogos cadastrados</font>
      </p>
      <p style="color: #999; font-size: 14px;">Clique para gerenciar rodadas e jogos</p>
    </div>
  <% end %>
  
</div>

<!-- CSS para hover nos cards -->
<style>
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2) !important;
  }
  
  @media (max-width: 768px) {
    div[style*="grid-template-columns: repeat(2, 1fr)"] {
      grid-template-columns: 1fr !important;
    }
  }
</style>
