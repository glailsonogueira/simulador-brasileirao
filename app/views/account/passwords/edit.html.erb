<% content_for :title, "Alterar senha" %>

<div class="card" style="max-width: 500px; margin: 50px auto;">
  <h1 style="margin-bottom: 20px;"> Alterar senha</h1>
  
  <%= form_with url: account_password_path, method: :patch, local: true do |f| %>
    <div style="margin-bottom: 15px;">
      <%= label_tag :current_password, "Senha atual:" %><br>
      <%= password_field_tag :current_password, nil, required: true, autofocus: true,
          style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>
    
    <div style="margin-bottom: 15px;">
      <%= label_tag :password, "Nova senha:" %><br>
      <%= password_field_tag :password, nil, required: true, minlength: 6,
          style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
      <small style="color: #666;">Mínimo 6 caracteres</small>
    </div>
    
    <div style="margin-bottom: 20px;">
      <%= label_tag :password_confirmation, "Confirmar nova senha:" %><br>
      <%= password_field_tag :password_confirmation, nil, required: true, minlength: 6,
          style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>
    
    <%= submit_tag "Alterar senha", class: "btn", style: "width: 100%; margin-bottom: 15px;" %>
  <% end %>
  
  <hr style="margin: 20px 0;">
  
  <p style="text-align: center;">
    <%= link_to "← Voltar", root_path %>
  </p>
</div>
