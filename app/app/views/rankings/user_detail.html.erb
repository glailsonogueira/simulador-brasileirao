<h1>Desempenho: <%= @user.name %></h1>
<%= link_to "← Voltar", rankings_path, class: "btn", style: "margin-bottom: 20px;" %>
<div class="card">
  <h2>Resumo Geral</h2>
  <p><strong>Pontos Totais:</strong> <%= @overall_standing&.total_points || 0 %></p>
  <p><strong>Rodadas Vencidas:</strong> <%= @overall_standing&.rounds_won || 0 %></p>
  <p><strong>Posição:</strong> <%= @overall_standing&.position || '-' %></p>
</div>
<div class="card">
  <h2>Por Rodada</h2>
  <table>
    <thead>
      <tr>
        <th>Rodada</th>
        <th>Pontos</th>
        <th>Posição</th>
        <th>Placares Exatos</th>
        <th>Resultados Corretos</th>
      </tr>
    </thead>
    <tbody>
      <% @round_scores.each do |score| %>
        <tr>
          <td><%= score.round.number %></td>
          <td><%= score.points %></td>
          <td><%= score.position %></td>
          <td><%= score.exact_scores %></td>
          <td><%= score.correct_results %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
