<div class="card" style="max-width: 500px; margin: 50px auto;">
  <h1 style="margin-bottom: 20px;">Cadastro</h1>
  <%= form_with model: @user, url: signup_path, local: true do |f| %>
    <% if @user.errors.any? %>
      <div style="background: #f8d7da; color: #721c24; padding: 15px; margin-bottom: 15px; border-radius: 5px;">
        <h4>Erros:</h4>
        <ul><% @user.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %></ul>
      </div>
    <% end %>
    <div style="margin-bottom: 15px;">
      <%= f.label :name, "Nome:" %><br>
      <%= f.text_field :name, required: true, style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>
    <div style="margin-bottom: 15px;">
      <%= f.label :email, "Email:" %><br>
      <%= f.email_field :email, required: true, style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>
    <div style="margin-bottom: 15px;">
      <%= f.label :password, "Senha:" %><br>
      <%= f.password_field :password, required: true, style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>
    <div style="margin-bottom: 15px;">
      <%= f.label :password_confirmation, "Confirmar senha:" %><br>
      <%= f.password_field :password_confirmation, required: true, style: "width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>
    <%= f.submit "Cadastrar", class: "btn", style: "width: 100%;" %>
  <% end %>
  <p style="margin-top: 20px; text-align: center;">
    Já tem conta? <%= link_to "Faça login", login_path %>
  </p>
</div>
